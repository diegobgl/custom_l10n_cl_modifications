<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Herencia del template tax_totals_widget para modificar "VAT", "Total" y "Exempt Amount" -->
    <template id="tax_totals_widget_inherit" inherit_id="l10n_cl.tax_totals_widget">
        
        <!-- Cambiar "VAT" por "IVA" -->
        <xpath expr="//td[contains(text(), 'VAT')]" position="replace">
            <td t-out="'IVA %s' % subtotal_amounts['vat_percent']"/>
        </xpath>

        <!-- Cambiar "Exempt Amount" por "Monto Exento" -->
        <xpath expr="//td[contains(text(), 'Exempt Amount')]" position="replace">
            <td><strong>Monto Exento</strong></td>
        </xpath>

        <!-- Cambiar "Total" por "Monto Total" -->
        <xpath expr="//tr[contains(@class, 'o_total')]//td[contains(text(), 'Total')]" position="replace">
            <td><strong>Monto Total</strong></td>
        </xpath>

    </template>
</odoo>
