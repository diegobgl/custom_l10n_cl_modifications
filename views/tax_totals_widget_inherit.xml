<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Herencia del template para reemplazar VAT por IVA -->
    <template id="tax_totals_widget_inherit" inherit_id="account.document_tax_totals">
        
        <!-- Reemplazar el texto "VAT" por "IVA" en el subtotal de impuestos -->
        <xpath expr="//tr[td[contains(.,'VAT')]]" position="replace">
            <t t-if="subtotal_amounts['vat_amount'] != 0.0">
                <tr>
                    <td t-out="'IVA %s' % subtotal_amounts['vat_percent']"/>
                    <td class="text-end" t-out="subtotal_amounts['vat_amount']"
                        t-options="{'widget': 'monetary', 'display_currency': subtotal_amounts['main_currency']}"/>
                </tr>
            </t>
        </xpath>

    </template>
</odoo>
