<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Herencia de la vista del reporte de facturas de account -->
    <template id="report_invoice_inherit" inherit_id="account.report_invoice_document">

        <!-- Modificar el borde alrededor del bloque de RUT a rojo -->
        <xpath expr="//div[@class='col-12 text-center']" position="attributes">
            <attribute name="class">border border-4</attribute>
            <attribute name="style">border-color: red;</attribute>
        </xpath>

            <xpath expr="//t[t-if='subtotal_amounts[&quot;vat_amount&quot;] != 0.0']" position="replace">
                <t t-if="subtotal_amounts['vat_amount'] != 0.0">
                    <tr>
                        <td t-out="'IVA %s' % subtotal_amounts['vat_percent']"/>
                        <td class="text-end" t-out="subtotal_amounts['vat_amount']"
                            t-options="{'widget': 'monetary', 'display_currency': subtotal_amounts['main_currency']}"/>
                    </tr>
                </t>
            </xpath>


    </template>
</odoo>
