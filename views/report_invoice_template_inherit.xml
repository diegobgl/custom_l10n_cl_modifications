<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Herencia del template custom_header para modificar el borde -->
    <template id="custom_header_inherit" inherit_id="l10n_cl.custom_header">

        <!-- Modificar el borde alrededor del bloque de RUT a rojo -->
        <xpath expr="//div[@name='right-upper-side']//div[contains(@class, 'border-dark')]" position="attributes">
            <attribute name="style">border-color: red;</attribute>
            <attribute name="class" remove="border-dark"/>
        </xpath>

    </template>

    <!-- Herencia del template account.document_tax_totals para modificar el texto VAT a IVA -->
    <template id="tax_totals_widget_inherit" inherit_id="account.document_tax_totals">

        <!-- Cambiar "VAT" por "IVA" en el subtotal de impuestos -->
        <xpath expr="//td[contains(text(), 'VAT')]" position="replace">
            <td t-out="'IVA %s' % subtotal_amounts['vat_percent']"/>
        </xpath>

    </template>

</odoo>

 
